scalar Upload
scalar UUID

input Send {
    to: String
    templateID: String!
    Subject: String
    typeSend: String!
}

input NewTemplate {
  file: Upload!
  name: String!
  description: String!
}

extend type Mutation {
    sendEmail(input: Send!): Message! @auth @hasRole(role: "admin")
    uploadTemplate(input: NewTemplate!): Message! @auth @hasRole(role: "admin")
}

extend type Query {
    getTemplate(id: UUID!): String!
}
